{% extends 'base.html.twig' %}

{% block title %}
    {{ serie.name }} | {{ parent() }}
{% endblock %}

{% block extrastyles %}
    <style>
        body {
            background-image: linear-gradient(rgba(0,0,0,0.9), rgba(0,0,0,0.7), url("{{ asset ('img/backdrops/' ~ serie.backdrop) }}"));
        }
    </style>
{% endblock %}

{% block body %}
    <div class="serie-details">
        <div>
            <img src="{{ asset('img/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
        </div>
        <div class="serie-details-infos">
            <h2>{{ serie.name }}</h2>
            <div>Note des  utilisateurs : {{ serie.vote }}/10</div>
            <div>Catégorie : {{ serie.genres }}</div>
            <div>Statut : {{ serie.status }}</div>
            <div>Diffusé du {{ serie.firstAirDate | date('d-m-Y')}} au {{ serie.lastAirDate | date('d-m-Y') }}</div>
            <div>{{ serie.overview | nl2br }}</div>

            <section class="seasons">
                <h3>Saisons</h3>
                {% for season in serie.seasons %}
                    <article>
                        <img src="{{ asset('img/posters/seasons/' ~ season.poster) }}" alt="{{ serie.name }} saison #{{ season.number }}">
                        <div>
                            <h4>Saison {{ season.number }}</h4>
                            {% if season.overview %}
                                <div>{{ season.overview }}</div>
                            {% endif %}
                        </div>

                    </article>
                {% endfor %}
            </section>
        </div>
    </div>
{% endblock %}

